<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_playback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/semibold"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="Белый Воротничок"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/video_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="1 серия 4 сезон"
            android:textColor="@color/grey10"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text=" / "
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/semibold"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <androidx.media3.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusDown="@id/quality_button"
            android:paddingHorizontal="7dp"
            app:played_color="@color/blue"
            app:scrubber_color="@color/blue"
            app:unplayed_color="@color/white" />

        <!--        <SeekBar-->
        <!--            android:id="@+id/progress_bar"-->
        <!--            style="?android:attr/progressBarStyleHorizontal"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:focusable="false"-->
        <!--            android:maxHeight="5dp"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:layout_marginBottom="15dp"-->
        <!--            android:paddingHorizontal="15dp"-->
        <!--            android:progress="0"-->
        <!--            android:progressDrawable="@drawable/custom_progress_bar"-->
        <!--            android:thumb="@drawable/custom_thumb"-->
        <!--            android:visibility="visible" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <Button
                android:id="@+id/quality_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:fontFamily="@font/semibold"
                android:nextFocusDown="@id/speed_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Quality"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText" />


            <Button
                android:id="@+id/speed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_speed"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:fontFamily="@font/semibold"
                android:nextFocusDown="@id/video_previous"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Speed"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText" />

            <LinearLayout
                android:id="@+id/nav_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/video_previous"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/transparent"
                    android:focusable="true"
                    android:nextFocusDown="@id/video_next"
                    android:padding="10dp"
                    android:src="@drawable/ic_previous"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/video_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:focusable="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>