<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#102E3B"
                        android:endColor="#102E3B"
                        android:type="linear"
                        android:angle="98.19" />
                    <gradient
                        android:startColor="#2F2F2F"
                        android:endColor="#2F2F2F"
                        android:type="linear"
                        android:angle="0" />
                    <stroke
                        android:width="1px"
                        android:color="@android:color/transparent" />
                    <corners android:radius="70px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state (unselected) -->
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@android:color/transparent"
                        android:endColor="@android:color/transparent"
                        android:type="linear"
                        android:angle="98.19" />
                    <gradient
                        android:startColor="@android:color/transparent"
                        android:endColor="@android:color/transparent"
                        android:type="linear"
                        android:angle="0" />
                    <stroke
                        android:width="1px"
                        android:color="@android:color/transparent" />
                    <corners android:radius="70px" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
